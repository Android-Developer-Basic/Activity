<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff4c3"
    tools:context=".SenderActivity">

    <Button
        android:id="@+id/act_a_button_google_maps"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="@string/to_google_maps"
        android:layout_margin="50dp"
        android:layout_gravity="top|center_horizontal"/>
    <Button
        android:id="@+id/act_a_button_to_email"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:layout_gravity="center|center_horizontal"
        android:text="@string/send_email" />
    <Button
        android:id="@+id/act_a_button_to_open_receiver"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="50dp"
        android:text="@string/open_receiver" />

</FrameLayout>
