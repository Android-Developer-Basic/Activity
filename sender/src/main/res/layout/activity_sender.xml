<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SenderActivity">

    <Button
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/to_google_maps_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Google Maps"
        />

    <Button
        app:layout_constraintTop_toBottomOf="@id/to_google_maps_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/send_email_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Email"
        />

    <Button
        app:layout_constraintTop_toBottomOf="@id/send_email_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/open_receiver_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Receiver"
        />

</androidx.constraintlayout.widget.ConstraintLayout>