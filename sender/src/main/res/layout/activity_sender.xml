<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SenderActivity">

    <Button
        android:id="@+id/activity_sender_to_gmaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_google_maps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_sender_send_email"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <Button
        android:id="@+id/activity_sender_send_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_sender_to_gmaps"
        app:layout_constraintBottom_toTopOf="@id/activity_sender_open_receiver"
        />

    <Button
        android:id="@+id/activity_sender_open_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_receiver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_sender_send_email"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>