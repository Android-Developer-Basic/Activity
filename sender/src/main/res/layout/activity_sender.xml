<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SenderActivity">

    <Button
        android:id="@+id/b_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/b_map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/b_email"
        app:layout_constraintEnd_toEndOf="@+id/b_map"
        app:layout_constraintStart_toStartOf="@+id/b_map"
        app:layout_constraintTop_toBottomOf="@+id/b_map" />

    <Button
        android:id="@+id/b_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/b_receiver"
        app:layout_constraintEnd_toEndOf="@+id/b_email"
        app:layout_constraintStart_toStartOf="@+id/b_email"
        app:layout_constraintTop_toBottomOf="@+id/b_email" />
</androidx.constraintlayout.widget.ConstraintLayout>