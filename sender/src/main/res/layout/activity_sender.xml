<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SenderActivity">

    <Button
        android:id="@+id/b_maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_google_maps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/b_send"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/send_email"
        app:layout_constraintEnd_toEndOf="@+id/b_maps"
        app:layout_constraintStart_toStartOf="@+id/b_maps"
        app:layout_constraintTop_toBottomOf="@+id/b_maps" />

    <Button
        android:id="@+id/b_openReceiver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/open_receiver"
        app:layout_constraintEnd_toEndOf="@+id/b_maps"
        app:layout_constraintHorizontal_bias="0.787"
        app:layout_constraintStart_toStartOf="@+id/b_maps"
        app:layout_constraintTop_toBottomOf="@+id/b_send" />

</androidx.constraintlayout.widget.ConstraintLayout>