<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FillFormActivity">
  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?attr/colorPrimary"
      android:minHeight="?attr/actionBarSize"
      android:theme="?attr/actionBarTheme"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:title="@string/edit_profile_title"
      app:titleTextColor="@color/white" />
  <LinearLayout
      android:layout_marginHorizontal="20dp"
      android:id="@+id/input_zone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <EditText
        android:id="@+id/edittext_name"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/edit_name_hint"

        />

    <EditText
        android:id="@+id/edittext_surname"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/edit_surname_hint" />

    <EditText
        android:id="@+id/edittext_age"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="@string/edit_age_hint" />
  </LinearLayout>

  <Button
      android:id="@+id/button_save"
      android:layout_marginHorizontal="20dp"
      android:layout_marginVertical="30dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/button_save_text"
      app:layout_constraintTop_toBottomOf="@id/input_zone"/>

</androidx.constraintlayout.widget.ConstraintLayout>