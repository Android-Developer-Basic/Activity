<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FillFormActivity">

    <Button
        android:id="@+id/button_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accept"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_age"
        android:layout_marginTop="32dp" />

    <EditText
        android:id="@+id/textview_age"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/t_age"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/textview_last_name"
        app:layout_constraintStart_toStartOf="@+id/textview_last_name"
        app:layout_constraintTop_toBottomOf="@+id/textview_last_name" />

    <EditText
        android:id="@+id/textview_last_name"
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:hint="@string/t_last_name"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textview_first_name"
        app:layout_constraintStart_toStartOf="@+id/textview_first_name"
        app:layout_constraintTop_toBottomOf="@+id/textview_first_name" />

    <EditText
        android:id="@+id/textview_first_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/t_first_name"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>