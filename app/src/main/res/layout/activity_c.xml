<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_c"
    tools:context=".ActivityC">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/bt_open_activity_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/open_activitya" />

        <Button
            android:id="@+id/bt_open_activity_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/open_activityd" />

        <Button
            android:id="@+id/bt_close_activity_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/close_activityc" />

        <Button
            android:id="@+id/bt_close_stack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/close_stack" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>