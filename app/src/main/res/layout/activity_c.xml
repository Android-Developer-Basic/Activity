<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196f3"
    tools:context=".ActivityC">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_c"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_open_activity_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="@string/open_activity_a"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/btn_open_activity_d"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btn_open_activity_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="@string/open_activity_d"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/btn_close_activity_c"
        app:layout_constraintTop_toBottomOf="@id/btn_open_activity_a"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btn_close_activity_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="@string/close_activity_c"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/btn_close_stack"
        app:layout_constraintTop_toBottomOf="@id/btn_open_activity_d"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btn_close_stack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="@string/close_stack"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_close_activity_c"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>